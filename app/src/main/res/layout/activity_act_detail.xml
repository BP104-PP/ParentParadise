<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.pp.parentparadise.lin.ActDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAct"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lin_slidimage02" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:text="聖誕親子帆布袋 - Frozen 冰雪奇緣主題派對"
                android:textColor="#333333"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:text="$1200"
                android:textColor="#333333"
                android:textSize="18dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/flBtLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <ImageButton
                        android:id="@+id/ibtFollow"
                        android:layout_width="122dp"
                        android:layout_height="36dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/lin_tab2_back" />

                    <ImageView
                        android:id="@+id/ivHeart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lin_heart_boder"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        style="@style/CodeFont16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="關注"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/ivHeart"
                        android:layout_centerVertical="true"/>
                    <TextView
                        style="@style/CodeFont16"
                        android:id="@+id/tvFollow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123"
                        android:layout_marginRight="8dp"
                        android:layout_alignRight="@+id/ibtFollow"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/flBtLike"
                    android:layout_marginLeft="10dp">

                    <ImageButton
                        android:id="@+id/ibtQandA"
                        android:layout_width="122dp"
                        android:layout_height="36dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/lin_tab2_back" />

                    <ImageView
                        android:id="@+id/ivMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/lin_msg"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"/>

                    <TextView
                        style="@style/CodeFont16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="問答"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/ivMsg"
                        android:layout_centerVertical="true"/>
                    <TextView
                        style="@style/CodeFont16"
                        android:id="@+id/tvMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginRight="8dp"
                        android:layout_alignRight="@+id/ibtQandA"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageButton
                        android:id="@+id/ibtRegister"
                        android:layout_width="60dp"
                        android:layout_height="36dp"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/lin_tab2_back2" />

                    <TextView
                        style="@style/CodeFont16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="報名" />
                </FrameLayout>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#B1B0B5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E8E8E8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#B1B0B5" />

            <RelativeLayout
                android:id="@+id/rlVipDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivVip"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/hao"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="90dp">

                    <TextView
                        android:id="@+id/tvVipName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="皓呆？"
                        android:textSize="20sp"
                        android:textColor="#000000"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/tvVipHistory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活動：3" />

                        <TextView
                            android:id="@+id/tvVipRanking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="評價：5"
                            android:layout_toRightOf="@+id/tvVipHistory"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/lin_detail_button"
                    android:textSize="26sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#B1B0B5" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E8E8E8" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#B1B0B5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="簡介"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAvtDescribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let it go 歌聲響起～湛藍色的冰雪在 Paint Sip 慢慢綻放，在奇緣的雪白世界裡設計 Frozen 帆布袋，一隻隻 Snowgie 雪偶圍繞蹦蹦跳，爸爸媽媽和寶貝們沈浸在魔幻聖誕派對，享受一起創作的佳節時光～"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="活動內容"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCttTitle01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCtt01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCttTitle02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCtt02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCttTitle03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCtt03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCttTitle04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCtt04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvCttTitle05"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCtt05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
